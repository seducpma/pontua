
<div id="interno2">
<% title "TITULO_PROFESSORS".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>CLASSIFICAÇÃO PONTUAÇÃO DE PROFESSORES POR FUNÇÃO</strong></font><br/>
 </div>
    <div class="tabs">
    <% form_tag consulta_funcao_consulta_path, :method => 'get' do %>
      <fieldset>
       <legend><font size=4>Função</font></legend>
       <table width="100%" align="center" bgcolor="#DCDCDC" >
          <tr>
            <td align="left"> <b>Função:</b>
              <%= select_tag :search, options_for_select(CARGO1).sort, :include_blank => '-- Selecionar --' %>
              <%= submit_tag "Filtrar", :name => nil %>
            </td>
          </tr>
       </table>
       </fieldset>
      <fieldset>
       <legend><font size=4>Pontuação</font></legend>
       <% if  @professor_consulta_funcao.present? %>
          <table border ="1" cellpadding="1" cellspacing="1" width="100%" >
            <tr>
              <th colspan="7">
                <font size="3"><b><%=  params[:search]%> - Ano Letivo <%= Time.current.strftime("%Y").to_i%> </b></font>
              </th>
            </tr>
            <tr>
              <center><th bgcolor="#cccccc" width = "5%">Posição</th></center>
              <center><th bgcolor="#cccccc" width = "7%">Matrícula</th></center>
              <th bgcolor="#cccccc" width = "40%">Nome</th>
              <th bgcolor="#cccccc" width = "5%">Titulação</th>
              <th bgcolor="#cccccc" width = "5%">Tempo Serviço</th>
              <th bgcolor="#cccccc" width = "5%">Pontuação Final</th>
              <th bgcolor="#cccccc"  width = "20%">Função</th>
             </tr>
             <% num=0 %>
              <% for ts in  @professor_consulta_funcao %>
             <% num= num+1 %>
              <tr>
                <td width = "5%"><center><%= num%>º</center></td>
               <td width = "7%"><center><%=h ts.professor.matricula %></center></td>
                <td width = "40%"><center><%=h ts.professor.nome %></center></td>
                  <%titulacao =  ts.pontuacao_geral - ts.total_geral_tempo_servico %>
                <td width = "5%"><center><%= titulacao%></center></td>
                <td width = "5%"><center><%=h ts.total_geral_tempo_servico%></center></td>
                   <%session[:prof_imp] = ts.id%>
                    <% if ts.pontuacao_geral.nil? then %>
                            <td width="5%"><%=h%></td>
                    <%else%>
                        <td width = "5%"><center><%=h ts.pontuacao_geral%></center></td>
                    <%end%>
                <td width = "20%"><center><%=h ts.professor.funcao%></center></td>

             </tr>
            <% end %>

                     <tr>
                           <td widht="8%" colspan="6"><b><%= link_to image_tag("/stylesheets/images/imprimir12.png"), onclick="javascript:MM_openBrWindow('#{impressao_geral_consulta_path(:professor => session[:prof_imp])}','impressao', 'scrollbars=yes');", :title => "Imprimir" %></b></td>
                      </tr>
         </table>

         <%  session[:tipoclassificacao] = 'CLASSIFICACÃO P/ FUNÇÃO' %>
       <%else%>
  
          <table border ="1" cellpadding="1" cellspacing="1" width="100%" >
            <tr>
              <th colspan="6">
                <font size="3"><b><%=  params[:search]%> - Ano Letivo <%= Time.current.strftime("%Y").to_i%> </b></font>
              </th>
            </tr>
            <tr>
              <th colspan="6">
                <font size="3"><b>NÃO CONSTA REGISTRO </b></font>
              </th>
            </tr>

          </table>

         <%  session[:tipoclassificacao] = 'CLASSIFICACÃO P/ FUNÇÃO' %>
       <%end%>



      </fieldset>
    <% end %>
       <br/>
  <table>
    <tr>
     <td width="6%"align="left" ><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
     <td align="left"><%= button_to 'Consultar', consulta_funcao1_path, :title => "Consultar" %></td>
    </tr>
  </table>
 </div>



</div>

<br/>
</div>






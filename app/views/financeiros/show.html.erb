                <td align="left" ><b>$ por Km: </b> </td>
                <td align="left">R$ <%=h  @financeiro.vkm %></font> </td>
              </font>
            </tr>
            <tr bgcolor="#F5F5F5">
              <td align="left"><b> Observações:</b></td>
              <td align="left"><%=h   @financeiro.obs%></td>
            </tr>

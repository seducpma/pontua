              <td align="left"><b>Horário:</b></td>
              <td align="left"><%=h  @financeiro.horario %></td>
           </tr>
           <tr bgcolor="#F5F5F5" >
              <td align="left"><b>Descrição:</b></td>
              <td align="left"><%=h  @financeiro.descricao %></td>
           </tr>
           <tr bgcolor="#F5F5F5" >
              <td align="left"><b>Valor:</b></td>
              <td align="left">R$ <%=h  @financeiro. credito %></td>
           </tr>

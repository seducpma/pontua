              <td align="left"><b>Data:</b></td>
              <td align="left"><%=h  @financeiro.data.strftime("%d de %B de %Y") %></td>
           </tr>
           <tr  bgcolor="#F5F5F5">
               <td align="left" ><b>$ por Hora:</b> </td>
                <td align="left">R$ <%=h  @financeiro.vhora %></font> </td>
              </font>

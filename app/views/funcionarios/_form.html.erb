<% form_for @funcionario, :html => { :multipart => true } do |f| %>
 <%= f.error_messages %>
  <font  size="2">
    <fieldset><legend><font  size=3> Dados Funcionário</font></legend>
      <table width="100%" align="center"  bgcolor="#F5F5F5">
        <tr>
          <td colspan="2" > <b> Participante: </b><%= f.select :participante, Funcionario::PARTICIPANTE%></td>
        </tr>
        <tr>
          <td><b>Nome: </b><%= f.text_field :nome, :size => 42 %></td>
          <td><b> Apelido: </b> <%= f.text_field :apelido,:size => 15   %> <b> Cargo: </b> <%= f.text_field :cargo, :size => 20  %></td>
        </tr>
        <tr>
          <td width="50%"><b>Data Nascimento: </b><%= f.date_select(:nascimento, :order => [:day, :month, :year], :start_year => (Date.today.year), :end_year => (Date.today.year - 80)) %></td>

          <td><b> Sexo: </b><%= f.select :sexo, Funcionario::SEXO   %>
              <b>Igreja:  </b><%= f.text_field :igreja, :size => 23 %></td>
        </tr>
        <tr>
          <td><b>Estado Civil: </b><%= f.select :estado_civil, Funcionario::CIVIL%></td>
          <td><b>Conjuge: </b><%= f.text_field :conjuge, :size =>42%></td>
        </tr>
        <tr>
          <td><b> Endereço: </b><%= f.text_field :endereco,:size =>39 %>
          <td><b>Nº </b><%= f.text_field :num, :size => 4 %>
               <b>Bairro: </b><%= f.text_field :bairro, :size =>35 %></td>
        </tr>
        <tr>
          <td><b>Cidade: </b><%= f.text_field :cidade, :size =>27%> <b> CEP: </b><%= f.text_field :cep, :size =>7%></td>
          <td><b>Complemento: </b><%= f.text_field :complemento, :size =>38%></td>
        </tr>
        <tr>
          <td><b>Fone: </b><%= f.text_field :fone, :size =>9%> <b> Celular: </b><%= f.text_field :cel, :size =>9%></td>
          <td><b>E_mail: </b><%= f.text_field :email, :size =>43%></td>
        </tr>
        <tr>
          <td><b>Escolaridade: </b><%= f.text_field :escolaridade, :size =>38%></td>
          <td><b>Empresa: </b><%= collection_select :funcionario, :unidade_id, @unidades, :id, :nome, :include_blank => ' --- Selecionar ---'  %></td>
        </tr>
        <tr>
           <td colspan="2"><b><%= f.label :photo, "Foto" %></b><%= f.file_field :photo %>

          </td>
        </tr>
        <tr>
          <td colspan="2">          
              <%= "Pessoas que residem na mesma casa #{link_to image_tag('/stylesheets/images/cadastrar.gif', :size => "20x20", :title => 'Cadastrar Familiar'), '#inline_familiar', :class => 'inline'}"%>
          </td>
         </tr>

         <tr>
           <td colspan="2"><b>Moradores: </b>
           <div id="lista"></div>
           </td>
         </tr>
        <tr >
          <td colspan="2"><b>Observações:</b><br/>
             <%= f.text_area(:obs, :cols =>"101", :rows => "2") %>
          </td>
       </tr>

      </table>
      <fieldset>
       <table width="100%" >
         <tr>
            <td width="4%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), home_path, :title => "Voltar" %></td>
            <td width="4%"><input type="image" src="/stylesheets/images/salvar.PNG" title="Gravar"></td>
            <td width="5%"><%= link_to image_tag("/stylesheets/images/consulta.png", :size => "35x35"), funcionarios_path,  :title => "Conusltar" %></td>
            <td></td>
         </tr>
       </table>
      </fieldset>
    </fieldset>
  </font>
<%end%>

    <%= render "form_familiar" %>




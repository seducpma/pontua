<% form_for @unidade do |f| %>
 <%= f.error_messages %>
  <font  size="2">
    <fieldset><legend><font  size=3> Dados da Empresa</font></legend>
      <table width="100%" align="center"  bgcolor="#F5F5F5">
        <tr>
          <td><font  size="3" color ="red"><b>*</b></font><b>Atividade Empresarial: </b><%= f.select :atividade, Unidade::ATIVIDADE%></td>
          <td></td>
        </tr>
        <tr>
         <td width="50%">
           <b>Nome: </b><%= f.text_field :nome, :size =>45 %>
              <%= observe_field :unidade_nome,
               :with => :unidade_nome,
               :url => { :action => 'mesmo_nome' } %>
         </td>
         <td>
           <b>Responsável: </b><%= f.text_field :responsavel1, :size =>39%>
         </td>
        </tr>
        <tr>
          <td colspan="2">
            <font size="4" color="red"><div id='nome_aviso'></div></font>
         </td>
       </tr>
        <tr>
          <td>
            <b> Endereço: </b><%= f.text_field :endereco,:size =>33 %>
            <b>Nº </b><%= f.text_field :num, :size => 4 %>
          </td>
          <td>
            <b>Cargo: </b><%= f.text_field :cargoresp1, :size =>28%>
            <b>Fone: </b><%= f.text_field :foneresp1, :size =>8%>
          </td>
        </tr>
        <tr>
          <td>
            <b> Bairro: </b><%= f.text_field :bairro, :size =>29 %>
            <b>Fone: </b><%= f.text_field :fone, :size =>8%>
          </td>
          <td>
            <b>E_mail: </b><%= f.text_field :emailresp1, :size =>43%>
          </td>
        </tr>
        <tr>
          <td><b>Complemento: </b><%= f.text_field :complemento, :size =>38%></td>
          <td>
            <b>Contato: </b><%= f.text_field :responsavel2, :size =>42%>
          </td>
        </tr>
        <tr>
          <td>
            <b>Cidade/Estado: </b><%= f.text_field :cidade, :size =>38%>
          </td>
          <td>
            <b>Cargo: </b><%= f.text_field :cargoresp2, :size =>28%>
            <b>Fone: </b><%= f.text_field :foneresp2, :size =>8%>
         </td>
        </tr>
        <tr>
          <td><b>E_mail: </b><%= f.text_field :email, :size =>44%></td>
          <td>
            <b>E_mail: </b><%= f.text_field :emailresp2, :size =>43%>
          </td>
        </tr>
         <tr>
           <td colspan="2"><font  size="3" color ="red"><b>*</b></font>
             <b>Obreiro: </b><%= collection_select :unidade, :obreiro_id, @obreiros, :id, :nome, :include_blank => ' --- Selecionar ---'  %>
           </td>
         </tr>  
        <tr>
          <td colspan="2"><b>Observações:</b><br/>
             <%= f.text_area(:obs, :cols =>"101", :rows => "2") %>
          </td>
       </tr>

      </table>
      <font  size="2" color ="red"><b>Campos com * preenchimento obrigatório</b></font>
      <fieldset>
       <table width="100%" >
         <tr>
            <td width="4%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), home_path, :title => "Voltar" %></td>
            <td width="4%"><input type="image" src="/stylesheets/images/salvar.PNG" title="Gravar"></td>
            <td width="5%"><%= link_to image_tag("/stylesheets/images/consulta.png", :size => "35x35"), unidades_path,  :title => "Consultar" %></td>
            <td></td>
         </tr>
       </table>
      </fieldset>
    </fieldset>
  </font>
<%end%>
  <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
        <tr bgcolor="#DCDCDC" >
            <th width="5">Nº</th>
            <th width="10">Status</th>
            <th width="450">Nome</th>
            <th width="50">Atividade</th>
            <th width="100">Responsável</th>
            <th width="100">Contato</th>
            <th colspan="3">Administração</th>
        </tr>
         <%$t=0%>
         <%$t1=0%>
         <%$t2=0%>
            <% @unidades.each do |unidade| %>
            <%$t = $t+1%>


            <tr bgcolor="#F5F5F5">
                <td align="left"><%=h unidade.id%></td>
                <%if unidade.em_atividade == true then%>
                <td><font color ="red "><b>INATIVO</b></font></td>
                   <%$t1 = $t1+1%>
                <%else%>
                   <td><font color ="blue "><b>ATIVO</b></font</td>
                   <%$t2 = $t2+1%>
                <%end%>
                <td align="left"><%=h unidade.nome%></td>
                <td align="left"><%=h unidade.atividade%></td>
                <td align="left"><%=h  unidade.responsavel1%></td>
                <td align="left"><%=h  unidade.responsavel2%></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), unidade, :title => "Exibir Empresa" %></td>
                <% if current_user.has_role?('admin') %>
                    <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_unidade_path(unidade), :title => "Editar Empresa" %></td>
                <%else%>
                    <td align="center"> --- </td>
                <%end%>
                <% if current_user.has_role?('admin')%>
                    <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "15x15"), unidade, :confirm => 'Confirma?', :method => :delete, :title => "Excluir Empresa" %></td>
                <%else%>
                    <td align="center"> --- </td>
                <%end%>
              </tr>
            <% end %>



     </table>
     <table bgcolor="#DCDCDC" width="100%">
      <tr >
          <td align="left"><b>TOTAL EMPRESAS PARCEIRAS: </b>
            <b><%=$t %></b>
          </td>
          <td align="left">   <font color ="blue "size="2"><b>TOTAL EMPRESAS PARCEIRAS ATIVAS: </b>
            <b><%=$t2 %></b></font>
          </td>
          <td align="left">          <font color ="red "size="2"><b>EMPRESAS PARCEIRAS INATIVAS: </b>
            <b><%=$t1 %></b></font>
          </td>

      </tr>
    </table>
  </div>

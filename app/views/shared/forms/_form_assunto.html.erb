	<div style='display:none'>
		<div id='inline_assunto' style='padding:10px; background:#EEE9E9;'>
          <h2>ASSUNTOS</h2>
          <% form_remote_for(:assunto,:url => { :action => 'create_assunto' }, :success => "$.fn.colorbox.close();$('select').multiselect('refresh')") do |f|%>
            <%= error_messages_for 'contact' %>
            <table>
              <tr>
                <th width="15%">Assunto:</th>
                <td width="20%" align="center">
                  <%= f.text_field :descricao %>
                </td>
                <td><%= submit_tag 'Criar', :id => "btn_criar"  %></td>
              </tr>
            </table>
          <%end%>
          <hr>
        </div>
	</div>
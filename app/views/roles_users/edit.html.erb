<% title "USUÁRIOS" %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>NÍVEL DE ACESSO</strong></font><br/>
 </div>
 <div class="tabs">
  <table width="100%" bgcolor="#F5F5F5" align="center">
     <% form_for(@role_user) do |f| %>
     <%@user = User.find(:all,:conditions => ['id = ' + @role_user.user_id.to_s])%>
     <%= f.error_messages %>
      <tr>
       <td  width="30%"><%= f.label :user_id,'Selecionar o Usuário' %></td>
       <td align="left"><%= f.collection_select  :user_id,@user, :id, :login, :include_blank => ' -- Selecionar -- ' %>
      </tr>
      <tr>
       <td><%= f.label :role_id,'Selecionar o nível de acesso :' %></td>
       <td><%= f.collection_select  :role_id,@roles, :id, :name, :include_blank => ' --Selecionar-- ' %>
             <%= observe_field :roles_user_role_id,
             :with => :roles_user_role_id,
             :url => { :action => 'role_id' } %>
             <div id="aviso"></div>
       </tr>
  </table>
  </div>
 <table>
  <tr>
    <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), root_path, :title => "Voltar" %></td>
    <td align="left"><input type="image" src="/stylesheets/images/associar.png" title="Associar Usuários"></td>
   <% end %>
   </tr>
</table>
</div>


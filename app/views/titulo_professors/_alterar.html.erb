<div id="conteudo">
<p>

<fieldset>
 <legend><font size=4>Alteração de Títulos Cadastrados</font></legend>
  <table width="100%" frame="box" rules="all">
        <tr>
       <th>
        Título
       </th>
       <th>
        Quantidade
       </th>
       <th>
        Valor do Título
       </th>
       <th>
        Pontuação
       </th>
       <th>
        Tipo
       </th>
       <th>
         Data do Título
       </th>
       <th>
         
       </th>
     </tr>

    <%for tp in @titulo_busca%>

      <tr>
        <td align="center">
          <%= Titulacao.find_by_id(tp.titulo_id).descricao %>
        </td>
      <td align="center">
        <%= tp.quantidade %>
      </td>
      <td align="center">
        <%= tp.valor %>
      </td>
      <td align="center">
        <%= tp.pontuacao_titulo %>
        <% $subtot_perm = $subtot_perm + (tp.pontuacao_titulo).to_f %>
      </td>
      <td align="center">
      <% if tp.tipo_curso == true%>
        <%= "PRESENCIAL" %>
      <%else%>
          <%  if (tp.quantidade<30) %>
            <%= "À DISTÂNCIA" %>-
            <font color ="red"><%= "NÃO VALIDO"%></font>
        <% else %>
            <%= "À DISTÂNCIA" %>
        <%end%>
      <%end%>
      </td>
      <td align="center">
        <%= tp.dt_titulo.strftime("%d/%m/%Y") %>
      </td>
        <td align="">
           <%= button_to 'Deletar', tp, :confirm => 'Confirma?', :method => :delete %>
      </td>
    </tr>

  <%end%>

</table>
<br />

</fieldset>

</div>

